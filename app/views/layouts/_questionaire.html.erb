
 <button class ="tech-btn" id ="myBtn" ><i class="far fa-question-circle fa-3x"></i></button>

     <div id="myModal" class= "modal">
       <div class = "modal-content">
         <span class = "close"> &times;</span>
         <p>Our goal is to provide you with the best user experience possible! Please leave a note on what you think! </p>

          <%= form_for :anything, scope: :customer, url: customers_questionaire_path ,multiple: true do |form| %>
                <div><%= form.label :email, 'E-mail:' %>
                  <%= form.text_field :email , placeholder: 'JohnDoe@yahoo.com' %>
                </div>

                <div><%= form.label :feedback, 'Type of feedback:' %>
                  <%= form.text_field :feedback, placeholder: 'Problem, Bug, Idea...' %>
                </div>

                <div><%= form.label :notes, 'Notes: (Required)' %>
                  <%= form.text_field :notes, class: 'notes', id: 'notes', placeholder: "Your Feedback" %>
                </div>

                <%= form.submit "Submit", class: "btn1", id: "button", disabled: true %>
          <% end  %>
          
       </div> 
     </div>


<script type="text/javascript">
          //get the form
            $('.notes').on("keyup", action);
              function action() {
                console.log("You are in the notes.")
                if($('.notes').val().length > 0){
                  $('#button').prop("disabled",false);
                } else {
                   $('#button').prop("disabled",true);
                }
              }

		      // Get the modal
          var modal = document.getElementById('myModal');

          // Get the button that opens the modal
          var btn1 = document.getElementById("myBtn");

          // Get the <span> element that closes the modal
          var span = document.getElementsByClassName("close")[0];
          // When the user clicks the button, open the modal 
          btn1.onclick = function() {
              modal.style.display = "block";
          }
          // When the user clicks on <span> (x), close the modal
          span.onclick = function() {
              modal.style.display = "none";
          }
          // When the user clicks anywhere outside of the modal, close it
          window.onclick = function(event) {
              if (event.target == modal) {
                  modal.style.display = "none"; 
              }
          }
         
</script>